@model C0621H2Shop.Models.Product.EditProduct

@{
    ViewData["Title"] = "Edit";
    var category = ViewBag.Category as C0621H2Shop.Entities.Category;
}

<h1>@category.CategoryName &gt; Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <input asp-for="ProductId" hidden class="form-control" value="@Model.ProductId"/>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pictures" class="control-label"></label>
                <input asp-for="Pictures" class="form-control" />
                <input asp-for="CategoryId" hidden class="form-control" value="@Model.CategoryId" />
                <span asp-validation-for="Pictures" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Index" asp-route-catId="@Model.CategoryId">
                    <i class="fa fa-backward"> Back to List</i>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
