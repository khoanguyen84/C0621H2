@model Login
@{
    ViewData["Title"] = "Login";
}
<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Login</div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Login" method="POST">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="Email" class="col-md-4 col-form-label text-md-right"></label>
                            <div class="col-md-6">
                                <input class="form-control" asp-for="Email" value="khoa.nguyen@codegym.vn" autofocus>
                                <input type="hidden" asp-for="ReturnUrl" value="@ViewBag.ReturnUrl"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Password" class="col-md-4 col-form-label text-md-right"></label>
                            <div class="col-md-6">
                                <input class="form-control" asp-for="Password" value="Asdf1234!">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6 offset-md-4">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="RemenberMe"> Remember Me
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 offset-md-4">
                            <button type="submit" class="btn btn-primary">
                                Login
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}